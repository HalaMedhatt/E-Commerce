@model List<Category>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

<br />

<main class="mt-5 pt-4">
    <div class="container-fluid">

        <div class="row g-4">

            <!-- ================= Categories Card ================= -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">

                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span>Categories</span>

                        <a asp-controller="Category"
                           asp-action="Create"
                           class="btn btn-light btn-sm">
                            + Add
                        </a>
                    </div>

                    <div class="card-body table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th width="180">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>
                                            <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id"
                                               class="btn btn-info btn-sm">Details</a>

                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                                               class="btn btn-warning btn-sm">Edit</a>

                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Delete this category?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

            <!-- ================= Products Card ================= -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">

                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <span>Products</span>

                        <a asp-controller="Product"
                           asp-action="Create"
                           class="btn btn-light btn-sm">
                            + Add
                        </a>
                    </div>

                    <div class="card-body table-responsive">
                        <table class="table table-hover align-middle">

                            <thead class="table-light">
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th width="180">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var product in ViewBag.Products)
                                {
                                    <tr>
                                        <td>
                                            <img src="/images/@product.DefualtImageUrl"
                                                 width="60"
                                                 class="rounded" />
                                        </td>

                                        <td>@product.Name</td>
                                        <td>@product.Category?.Name</td>

                                        <td>
                                            @if (product.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>

                                        <td>
                                            @* <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                                               class="btn btn-info btn-sm">Details</a> *@

                                            <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@product.Id"
                                               class="btn btn-warning btn-sm">Edit</a>

                                            @* <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Delete this product?')">Delete</a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

            <!-- ================= Pagination (Products Only) ================= -->
            <div class="col-12 d-flex justify-content-end mt-2">
                <nav aria-label="Products pagination">
                    <ul class="pagination pagination-sm mb-0 d-flex">

                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="IndexAdmin" asp-route-page="@(ViewBag.CurrentPage - 1)">‹</a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="IndexAdmin" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="IndexAdmin" asp-route-page="@(ViewBag.CurrentPage + 1)">›</a>
                        </li>

                    </ul>
                </nav>
            </div>


        </div>
    </div>
</main>
