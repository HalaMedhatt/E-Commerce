@model E_Commerce.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_Profile";
}



<!-- Profile Section Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Main Profile Content -->
            <div class="col-lg-8 col-md-10 mx-auto">
                <!-- Profile Card -->
                <div class="bg-light rounded overflow-hidden">
                    <!-- Profile Header with Avatar -->
                    <div class="bg-primary p-4 text-center">
                        <!-- Avatar Display -->
                        <div class="position-relative d-inline-block mb-3">
                            
                            <img src="~/img/Avatar/@Model.Avatar"                                 
                                 alt="@Model.FirstName's Avatar"
                                 class="rounded-circle border border-4 border-white shadow"
                                 style="width: 120px; height: 120px; object-fit: cover;">
                            

                        </div>
                        <h3 class="text-white mb-1">@Model.FirstName @Model.LastName</h3>
                        <p class="text-white-50 mb-0">
                            <i class="fas fa-envelope me-1"></i> @Model.Email
                        </p>
                    </div>

                    <!-- Profile Body -->
                    <div class="p-4">
                        <div class="row g-4">
                            <!-- First Name -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-primary rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-user text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">First Name</small>
                                        <h6 class="mb-0 fw-bold">@Model.FirstName</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-primary rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-user text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Last Name</small>
                                        <h6 class="mb-0 fw-bold">@Model.LastName</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-info rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-at text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Username</small>
                                        <h6 class="mb-0 fw-bold">@@@Model.UserName</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-success rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-envelope text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Email Address</small>
                                        <h6 class="mb-0 fw-bold text-break">@Model.Email</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-warning rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-phone text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Phone Number</small>
                                        <h6 class="mb-0 fw-bold">
                                            @(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)
                                        </h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Avatar Info -->
                            <div class="col-md-6">
                                <div class="d-flex align-items-center bg-white rounded p-3 shadow-sm">
                                    <div class="btn-square bg-secondary rounded-circle me-3" style="width: 50px; height: 50px;">
                                        @if (!string.IsNullOrEmpty(Model.Avatar))
                                        {
                                            <img src="~/img/Avatar/@Model.Avatar" 
                                                 alt="Avatar" 
                                                 class="rounded-circle"
                                                 style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <img src="~/img/Avatar/default.jpg" 
                                                 alt="Avatar" 
                                                 class="rounded-circle"
                                                 style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Profile Avatar</small>
                                        <h6 class="mb-0 fw-bold">
                                            @(string.IsNullOrEmpty(Model.Avatar) ? "Default" : "Custom Avatar")
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-md-4 mb-3 mb-md-0 mx-auto">
                                <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-primary border-2 border-secondary rounded-pill w-100 py-3">
                                    <i class="fas fa-edit me-2"></i>Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Recent Orders -->
                <div class="bg-light rounded p-4 mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="text-primary mb-0">
                            <i class="fas fa-shopping-bag me-2"></i>Recent Orders
                        </h4>
                        <a href="@Url.Action("MyOrders", "Order")" class="btn border border-secondary rounded-pill px-4 text-primary">
                            View All
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#ORD-001</td>
                                    <td>Jan 15, 2024</td>
                                    <td>3 items</td>
                                    <td>$125.00</td>
                                    <td><span class="badge bg-success">Delivered</span></td>
                                    <td>
                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>#ORD-002</td>
                                    <td>Jan 18, 2024</td>
                                    <td>5 items</td>
                                    <td>$230.00</td>
                                    <td><span class="badge bg-warning text-dark">Processing</span></td>
                                    <td>
                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>#ORD-003</td>
                                    <td>Jan 20, 2024</td>
                                    <td>2 items</td>
                                    <td>$75.50</td>
                                    <td><span class="badge bg-info">Shipped</span></td>
                                    <td>
                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Profile Section End -->

<style>
    /* Avatar hover effect */
    .position-relative:hover .position-absolute {
        transform: scale(1.1);
        transition: transform 0.2s ease;
    }
    
    .position-absolute {
        transition: transform 0.2s ease;
    }
    
    /* Card hover effect */
    .bg-white.rounded.p-3 {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .bg-white.rounded.p-3:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
</style>