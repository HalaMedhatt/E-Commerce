                                    <div class="btn-square bg-secondary rounded-circle me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-phone text-white d-flex align-items-center justify-content-center h-100"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted text-uppercase">Phone Number</small>
                                        <h6 class="mb-0 fw-bold">
                                            @(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)
                                        </h6>
                                    </div>
                                </div>
                            </div>

