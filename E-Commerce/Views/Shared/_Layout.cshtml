<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Honey Store</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/MyStyle.css" />


</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
<!-- Navbar start -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Egypt, Damietta</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">HonyHive@Example.com</a></small>
                </div>
                <div class="top-info ps-2">
                </div>
            </div>
        </div>
        <div class="container px-0">
            @* <nav class="navbar navbar-light bg-white navbar-expand-xl sticky-top"> *@
            <nav class="navbar navbar-expand-lg sticky-top">

                <a asp-action="Index" asp-controller="Home" class="navbar-brand"><h1 class="text-primary display-6">Honey Hive</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                        <a asp-controller="Product" asp-action="Index" class="nav-item nav-link">Shop</a>
                        <a  class="nav-item nav-link">Contact</a>
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        

                       @if(User.IsInRole("Admin")){
                        <a asp-controller="Home" asp-action="IndexAdmin" class="nav-item nav-link">My Products</a>
                        <a asp-controller="Order" asp-action="Index" class="nav-item nav-link">Orders</a>
                       }
                    </div>
                    <div class="d-flex m-3 me-0">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                        <a asp-action="Index" asp-controller="Cart" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                        </a>
                        
                    </div>
                    
                    @* //////////////////////// drop list *@
                                   <!-- User Dropdown -->
                    
                    <div class="d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a href="#" class="d-block text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/img/Avatar/@(string.IsNullOrEmpty(User.FindFirst("Avatar")?.Value) ? "default.jpg" : User.FindFirst("Avatar")?.Value)"
                                         alt="Profile Avatar"
                                         class="rounded-circle border border-2 border-white shadow-sm"
                                         style="width: 45px; height: 45px; object-fit: cover;"
                                         onerror="this.src='~/img/Avatar/default.jpg'">
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                                    <li>
                                        <a class="dropdown-item fw-semibold" asp-controller="Profile" asp-action="GetProfile">
                                            <i class="fas fa-user-circle me-2 text-primary"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item fw-semibold" asp-action="Index" asp-controller="Cart">
                                            <i class="fas fa-shopping-bag me-2 text-warning"></i> My Orders
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger fw-semibold" asp-controller="Account" asp-action="LogOut">
                                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        }
                    </div>
                    
                    @* ///////////////////drop list ///////////////////// *@
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->

    <div class="container-fluid hero-header d-flex align-items-end min-vh-100">
        <div class="container pb-5">
            <div class="row">
                <div class="col-12 col-lg-7 
                        text-start 
                        ps-2 ps-lg-0 
                        mb-5">

                    <h4 class="mb-3 text-white">
                        100% Organic Bee Products
                    </h4>

                    <h1 class="display-4 display-lg-1 text-white">
                        Organic Honey <br />
                        Bee Products
                    </h1>

                </div>
            </div>
        </div>
    </div>





    
    <main class="mt-5 pt-5">
        @RenderBody()

        @RenderSection("productIndexViewOne", required: false)

    </main>





     <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <a href="#">
                            <h1 class="text-primary mb-0">Honey Hive</h1>
                            <p class="text-secondary mb-0">Fresh products</p>
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative mx-auto">
                            <input class="form-control border-0 w-100 py-3 px-4 rounded-pill" type="number" placeholder="Your Email">
                            <button type="submit" class="btn btn-primary border-0 border-secondary py-3 px-4 position-absolute rounded-pill text-white" style="top: 0; right: 0;">Subscribe Now</button>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" 
                               href="https://wa.me/201028781595" target="_blank">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                            <a class="btn  btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                       </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Why People Like us!</h4>
                        <p class="mb-4">
                            Our honey is 100% pure, natural, and harvested with care from the finest local flowers. 
                            People love us for the rich taste, natural goodness, and health benefits that come straight from the hive to your table.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Shop Info</h4>
                        <a class="btn-link" href="">About Us</a>
                        
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Account</h4>
                        <a class="btn-link" href="">My Account</a>
                        <a class="btn-link" href="">Shop details</a>
                        <a class="btn-link" href="">Shopping Cart</a>
                        
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact</h4>
                        <p>Address: Egypt, Damietta </p>
                        @* <p>Email: Example@gmail.com</p> *@
                        <p>Phone: +20 10 28781595</p>
                        <p>Payment Accepted</p>
                        <div class="d-flex align-items-center" style="width:236px; height:30px; gap:10px;">
                            <i class="fa-brands fa-cc-visa fa-2x text-primary"></i>
                            <i class="fa-solid fa-money-bill-wave fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright bg-dark py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Honey Hive</a>, All right reserved.</span>
                </div>
                
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    @* <!-- JavaScript Libraries --> *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @* *@
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script> *@

    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    

</body>

</html>