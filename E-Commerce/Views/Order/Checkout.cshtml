@using E_Commerce.Models.Enum
@model E_Commerce.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    Layout = "_checkout";
}

<div class="container py-4">
    <div class="row g-4">
        <!-- قسم العناوين -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Delivery addresses (@Model.Addresses.Count)</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post" id="checkoutForm">

                        <input type="hidden" asp-for="ShippingAddressId" id="selectedAddressId" />
                        <input type="hidden" asp-for="PaymentMethod" id="selectedPaymentMethod" />
                        
                        <!-- قائمة العناوين -->
                        <div class="address-list">
                            @if (!Model.Addresses.Any())
                            {
                                <div class="alert alert-warning">
                                    <p class="mb-3">There are no Delivery addresses</p>
                                </div>
                            }
                            else
                            {
                                @foreach (var address in Model.Addresses)
                                {
                                    <div class="card address-card mb-3 border @(Model.ShippingAddressId == address.Id ? "border-primary" : "border-light")"
                                         data-address-id="@address.Id"
                                         onclick="selectAddress(@address.Id)">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start">
                                                <div class="form-check me-3">
                                                    <input class="form-check-input" 
                                                           type="radio" 
                                                           name="addressRadio" 
                                                           id="address_@address.Id">
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1">
                                                        @(!string.IsNullOrEmpty(address.Street) ? address.City : "Delivery addresse")
                                                    </h6>
                                                    <p class="text-muted mb-1">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        @address.Street، @address.City
                                                    </p>
                                                 
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent py-2">
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-link btn-sm text-decoration-none p-0" 
                                                        data-bs-toggle="modal" data-bs-target="#editAddressModal" 
                                                        onclick="loadAddressForEdit(@address.Id)">
                                                    Edit Address
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <!-- Add Address -->
                        <button type="button" class="btn btn-outline-primary w-100 mt-3" 
                                data-bs-toggle="modal" data-bs-target="#addAddressModal">
                            <i class="fas fa-plus me-2"></i>
                            Add New Address
                        </button>
                    </form>
                    </div>
                    </div>
                
                <!-- Payment -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                    <h4 class="mb-0">Payment method</h4>
                    </div>
                    <div class="card-body">
                        <div class="payment-methods">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="paymentRadio" 
                                       id="payment_cash" value="Cash" 
                                       @(Model.PaymentMethod == PaymentMethod.Cash ? "checked" : "") 
                                       onclick="selectPaymentMethod('Cash')">
                                <label class="form-check-label d-flex align-items-center" for="payment_cash">
                                    <i class="fas fa-money-bill-wave fa-2x me-3 text-success"></i>
                                    <div>
                                    <h6 class="mb-0">Cash on Delivery </h6>
                                    <small class="text-muted">Pay by cash on delivery. </small>
                                    </div>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentRadio" 
                                       id="payment_visa" value="Visa" 
                                       @(Model.PaymentMethod == PaymentMethod.Visa ? "checked" : "") 
                                       onclick="selectPaymentMethod('Visa')">
                                <label class="form-check-label d-flex align-items-center" for="payment_visa">
                                    <i class="fas fa-credit-card fa-2x me-3 text-primary"></i>
                                    <div>
                                    <h6 class="mb-0">credit and debit cards</h6>
                                        <small class="text-muted">Pay by Visa</small>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
   </div>
        <!-- Add New Address -->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Address" asp-controller="Save" method="post">
   
                    <div class="mb-3">
                        <label class="form-label">City in Egypte</label>
                        <input type="text" class="form-control" id="city" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Street</label>
                        <input type="text" class="form-control" id="street" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @* <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cansel</button> *@
                <button type="submit" class="btn btn-primary">Save Address</button>
            </div>
        </div>
    </div>
</div>
    <style>
        .address-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .address-card:hover {
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }
        
        .payment-methods .form-check-label {
            padding: 15px;
            border-radius: 10px;
            border: 2px solid #f0f0f0;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .payment-methods .form-check-input:checked + .form-check-label {
            border-color: #0d6efd;
            background-color: #f8f9ff;
        }
        
        .sticky-top {
            z-index: 1;
        }
    </style>
}