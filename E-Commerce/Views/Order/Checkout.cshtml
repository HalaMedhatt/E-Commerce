@using E_Commerce.Models.Enum
@model E_Commerce.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    Layout = "_cart";
}
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Order</h1>
</div>
<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-8">
            <form asp-action="Checkout" method="post" id="checkoutForm">
                <input type="hidden" asp-for="ShippingAddressId" id="selectedAddressId" />
                <input type="hidden" asp-for="PaymentMethod" id="selectedPaymentMethod" />

                <div class="card">
                    <div class="card-header bg-light">
                        <h4 class="mb-0">Delivery addresses (@Model.Addresses.Count)</h4>
                    </div>
                    <div class="card-body">
                        <div class="address-list">
                            @if (!Model.Addresses.Any())
                            {
                                <div class="alert alert-warning">
                                    <p class="mb-3">There are no Delivery addresses</p>
                                </div>
                            }
                            else
                            {
                                @foreach (var address in Model.Addresses)
                                {
                                    <div class="card mb-3 border
                                                @(Model.ShippingAddressId == address.Id ? "border-primary" : "border-light")">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start">
                                                <div class="form-check me-3">
                                                    <input class="form-check-input"
                                                           type="radio"
                                                           name="ShippingAddressId"
                                                           id="address_@address.Id"
                                                           value="@address.Id"
                                                           @(Model.ShippingAddressId == address.Id ? "checked" : "")
                                                           onchange="document.getElementById('selectedAddressId').value = this.value; updateCheckoutButton();">
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1">
                                                        @(!string.IsNullOrEmpty(address.Street) ? address.City : "Delivery address")
                                                    </h6>
                                                    <p class="text-muted mb-1">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        @address.Street، @address.City
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent py-2">
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-link btn-sm text-decoration-none p-0"
                                                        data-bs-toggle="modal" data-bs-target="#editAddressModal">
                                                    Edit Address
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <button type="button" class="btn btn-outline-primary w-100 mt-3"
                                data-bs-toggle="modal" data-bs-target="#addAddressModal">
                            <i class="fas fa-plus me-2"></i>
                            Add New Address
                        </button>
                    </div>
                </div>

                <!-- Payment -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h4 class="mb-0">Payment method</h4>
                    </div>
                    <div class="card-body">
                        <div class="payment-methods">
                            <div class="form-check mb-3">
                                <input class="form-check-input"
                                       type="radio"
                                       name="PaymentMethod"
                                       id="payment_cash"
                                       value="Cash"
                                       @(Model.PaymentMethod == PaymentMethod.Cash ? "checked" : "")
                                       onchange="document.getElementById('selectedPaymentMethod').value = this.value; updateCheckoutButton();">
                                <label class="form-check-label d-flex align-items-center" for="payment_cash">
                                    <i class="fas fa-money-bill-wave fa-2x me-3 text-success"></i>
                                    <div>
                                        <h6 class="mb-0">Cash on Delivery</h6>
                                        <small class="text-muted">Pay by cash on delivery.</small>
                                    </div>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="PaymentMethod"
                                       id="payment_visa"
                                       value="Visa"
                                       @(Model.PaymentMethod == PaymentMethod.Visa ? "checked" : "")
                                       onchange="document.getElementById('selectedPaymentMethod').value = this.value; updateCheckoutButton();">
                                <label class="form-check-label d-flex align-items-center" for="payment_visa">
                                    <i class="fas fa-credit-card fa-2x me-3 text-primary"></i>
                                    <div>
                                        <h6 class="mb-0">Credit and debit cards</h6>
                                        <small class="text-muted">Pay by Visa</small>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <button type="submit"
                            form="checkoutForm"
                            class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center"
                            id="checkoutBtn"
                            @(!(Model.ShippingAddressId > 0 && Model.PaymentMethod != null) ? "disabled" : "")>
                        <i class="fas fa-lock me-2"></i>
                        Complete Order
                    </button>

                    <div class="alert alert-warning mt-3 small" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @if (!(Model.ShippingAddressId > 0 && Model.PaymentMethod != null))
                        {
                            <span>Please select delivery address and payment method to complete your order.</span>
                        }
                        else
                        {
                            <span>Ready to complete your order.</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add New Address Modal -->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Address" method="post">
                    <div class="mb-3">
                        <label class="form-label">City in Egypt</label>
                        <input type="text" class="form-control" name="City" id="city" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Street</label>
                        <input type="text" class="form-control" name="Street" id="street" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Address</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function updateCheckoutButton() {
        const addressSelected = document.querySelector('input[name="ShippingAddressId"]:checked');
        const paymentSelected = document.querySelector('input[name="PaymentMethod"]:checked');
        const checkoutBtn = document.getElementById('checkoutBtn');

        if (addressSelected && paymentSelected) {
            checkoutBtn.disabled = false;
            checkoutBtn.innerHTML = '<i class="fas fa-lock me-2"></i>Complete Order';
        } else {
            checkoutBtn.disabled = true;
            checkoutBtn.innerHTML = '<i class="fas fa-lock me-2"></i>Select Address & Payment';
        }
    }
</script>