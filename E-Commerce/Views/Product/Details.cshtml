@model E_Commerce.Models.Product
@using System.Collections.Generic
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_DatailsLayout.cshtml";
    // Ensure ProductReview is a variable, not a type.
    // Example: If you pass reviews as a ViewBag or ViewData, use that.
    // For demonstration, let's assume you use ViewBag.ProductReviews:
    var productReviews = ViewBag.ProductReviews as IEnumerable<E_Commerce.Models.ProductReview>;
}
<br />
<div class="container py-5">
    <div class="row g-4">

        <!-- Product Image -->
        <div class="col-md-6">
            <div class="border rounded p-3 bg-light d-flex justify-content-center align-items-center"
                 style="height: 420px;">
                <img src="~/images/@Model.DefualtImageUrl"
                     class="img-fluid"
                     style="max-height: 100%; object-fit: contain;"
                     alt="@Model.Name" />
            </div>
        </div>


        <!-- Product Info -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>

            <p class="text-muted mb-2">
                Category:
                <span class="text-success">
                    @Model.Category?.Name
                </span>
            </p>
            <h4 class="text-success mb-3" id="productPrice">
                @Model.Variants.First().Price $
            </h4>

            @if (Model.Variants != null && Model.Variants.Any())
            {
                <div class="mb-3">
                    <h6 class="fw-bold">Size</h6>

                    <div class="d-flex gap-2 flex-wrap">
                        @foreach (var variant in Model.Variants)
                        {
                            <button type="button"
                                    class="btn btn-outline-success variant-btn"
                                    data-price="@variant.Price"
                                    data-variant-id="@variant.Id">
                                @variant.Size
                            </button>
                        }
                    </div>
                </div>
            }


            <!-- Rating (Static for now) -->
            <div class="mb-3 text-warning">
                ★★★★☆
            </div>

            <p class="mb-4">
                @Model.BriefDescription
            </p>

            <!-- Quantity -->
            <div class="d-flex align-items-center mb-4">
                <button type="button"
                        class="btn btn-outline-secondary"
                        id="decreaseQty">
                    −
                </button>

                <input type="text"
                       id="quantity"
                       class="form-control text-center mx-2"
                       value="1"
                       style="width:70px;"
                       readonly />

                <button type="button"
                        class="btn btn-outline-secondary"
                        id="increaseQty">
                    +
                </button>
            </div>


            <!-- Add To Cart -->
            <a href="#" class="btn btn-success px-4 py-2">
                <i class="fa fa-shopping-bag me-2"></i>
                Add to cart
            </a>
        </div>
    </div>

    <!-- Tabs -->
    <div class="row mt-5">
        <div class="col-12">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#desc">
                        Description
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews">
                        Reviews
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Description -->
                <div class="tab-pane fade show active" id="desc">
                    <p>
                        @Model.Description
                    </p>

                    <table class="table table-bordered w-50 mt-4">
                        <tr>
                            <th>Status</th>
                            <td>@(Model.IsActive ? "Available" : "Unavailable")</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>@Model.CreatedAt.ToShortDateString()</td>
                        </tr>
                    </table>
                </div>

                <!-- Reviews -->
                <div class="tab-pane fade" id="reviews">
                    <h5 class="mb-3">Leave a Review</h5>

                    <!-- Review Form -->
                    <form asp-action="Create" asp-controller="Review" method="post">
                        <div asp-validation-summary="All"></div>
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="ProductId" value="@Model.Id" />

                        <div class="row g-3">

                            <!-- Rating -->
                            <div class="col-12">
                                <select name="Rating" class="form-select" required>
                                    <option value="">Select Rating</option>
                                    <option value="1">★☆☆☆☆</option>
                                    <option value="2">★★☆☆☆</option>
                                    <option value="3">★★★☆☆</option>
                                    <option value="4">★★★★☆</option>
                                    <option value="5">★★★★★</option>
                                </select>
                            </div>

                            <!-- Comment -->
                            <div class="col-12">
                                <textarea name="Comment"
                                          class="form-control"
                                          rows="4"
                                          placeholder="Your Review *"
                                          required></textarea>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    Submit Review
                                </button>
                            </div>

                        </div>
                    </form>

                    <!-- Display Existing Reviews -->
                    @* <div class="mt-4">
                        @if (productReviews != null )
                        {
                            foreach (var review in productReviews)
                            {
                                <div class="card mb-3 p-3">
                                    <div>
                                        <strong>@review.UserId</strong> 
                                        <span class="text-muted">(@review.CreatedAt.ToShortDateString())</span>
                                    </div>
                                    <div>
                                        Rating:
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <span class="text-warning">★</span>
                                        }
                                        @for (int i = review.Rating; i < 5; i++)
                                        {
                                            <span class="text-secondary">★</span>
                                        }
                                    </div>
                                    <p>@review.Comment</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No reviews yet. Be the first to review!</p>
                        }
                    </div> *@
                    <div class="row">
                        @if (productReviews != null && productReviews.Any())
                        {
                            foreach (var review in productReviews)
                            {
                                <div class="col-lg-6">
                                    <div class="testimonial-item">
                                        <p class="testimonial-text">
                                            @review.Comment
                                        </p>

                                        <div class="testimonial-footer d-flex align-items-center">
                                            <img src="img/testimonial-1.jpg" alt="User Image" class="rounded-circle" style="width:50px;height:50px;">
                                            <div class="ms-3">
                                                <h5 class="mb-1">@review.User?.UserName ?? "Anonymous"</h5>
                                                <span>@review.User</span>
                                                <div class="testimonial-rating">
                                                    @for (int i = 0; i < review.Rating; i++)
                                                    {
                                                        <span class="text-warning">★</span>
                                                    }
                                                    @for (int i = review.Rating; i < 5; i++)
                                                    {
                                                        <span class="text-secondary">★</span>
                                                    }
                                                </div>
                                            </div>
                                            <i class="fa fa-quote-right quote-icon"></i>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No reviews yet. Be the first to review!</p>
                        }
                    </div>


                </div>


            </div>
            

        </div>
    </div>
</div>
<script>
    const buttons = document.querySelectorAll('.variant-btn');
    const priceElement = document.getElementById('productPrice');

    buttons.forEach(btn => {
        btn.addEventListener('click', function () {

            buttons.forEach(b => b.classList.remove('active'));

            this.classList.add('active');

            
            priceElement.innerText = this.dataset.price + " $";
        });
    });


    const qtyInput = document.getElementById('quantity');
    const increaseBtn = document.getElementById('increaseQty');
    const decreaseBtn = document.getElementById('decreaseQty');

    let quantity = 1;

    increaseBtn.addEventListener('click', () => {
        quantity++;
        qtyInput.value = quantity;
    });

    decreaseBtn.addEventListener('click', () => {
        if (quantity > 1) {
            quantity--;
            qtyInput.value = quantity;
        }
    });


</script>
