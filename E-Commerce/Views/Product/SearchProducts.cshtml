@model IEnumerable<E_Commerce.Models.Product>

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No products found 😢</p>
}
else
{
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <h5>@product.Name</h5>
                <p>@product.Description</p>
            </div>
        }
    </div>
}
